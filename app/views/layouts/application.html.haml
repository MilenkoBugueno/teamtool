!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Ts'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Ts'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      = render 'layouts/messages'
      %br
      .row
        .col-lg-3
          .panel.panel-default
            .panel-heading
              %h4 Certifications
            .panel-body
              %ul.nav.nav-pills.nav-stacked
                %li

                %li.active{role: "presentation"}
                  =link_to "CERT-01", "#"
                %li{role: "presentation"}
                  =link_to "CERT-02", "#"


        .col-lg-6
          .panel.panel-default
            .panel-body
              .row
                - MoveType.all.each do |move_type|
                  .col-lg-1
                    = link_to image_tag( move_type.icon_path, :width => 40, :height => 40), new_move_path(move_type_id: move_type.id),  "data-toggle"=>"tooltip", :title=>move_type.title

          .panel.panel-default
            .panel-body
              .row
                %ul.nav.nav-pills
                  %li.active{role: "presentation"}
                    =link_to "My Day", "#"
                  %li{role: "presentation"}
                    =link_to "Sprint", "#"
                  %li{role: "presentation"}
                    =link_to "Backlog", "#"
                  %li{role: "presentation"}
                    =link_to "Kalender", "#"
          .panel.panel-default
            .panel-body
              = yield


        .col-lg-3
          .panel.panel-default
            .panel-heading
              %h4 My Team
            .panel-body
              %ul.nav.nav-pills.nav-stacked
                -User.all.each do |user|
                  -if user == current_user
                    %li.active{role: "presentation"}
                      =link_to user.name, user_path(user)
                  -else
                    %li{role: "presentation"}
                      =link_to user.name, user_path(user)


