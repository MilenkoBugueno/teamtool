- model_class = Move
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @move.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @move.description
%p
  %strong= model_class.human_attribute_name(:results) + ':'
  %br
  = @move.results
%p
  %strong= model_class.human_attribute_name(:start_date) + ':'
  %br
  = @move.start_date
%p
  %strong= model_class.human_attribute_name(:end_date) + ':'
  %br
  = @move.end_date
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @move.user.name if @move.user.present?
%p
  %strong= model_class.human_attribute_name(:project_id) + ':'
  %br
  = @move.project_id
%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @move.category_id
%p
  %strong= model_class.human_attribute_name(:inscription_id) + ':'
  %br
  = @move.inscription_id
%p
  %strong= model_class.human_attribute_name(:container_id) + ':'
  %br
  = @move.container_id


= link_to t('.back', :default => t("helpers.links.back")), moves_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_move_path(@move), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), move_path(@move), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
