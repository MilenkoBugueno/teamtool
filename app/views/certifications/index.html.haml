- model_class = Certification
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:short_name)
      %th= model_class.human_attribute_name(:level_id)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @certifications.each do |certification|
      %tr
        %td= link_to certification.id, certification_path(certification)
        %td= certification.title
        %td= certification.short_name
        %td= certification.level_id
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_certification_path(certification), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), certification_path(certification), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_certification_path, :class => 'btn btn-primary'
