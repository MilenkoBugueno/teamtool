.authform
  %h3= t('titles.welcome')
  %br

  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
    %h3=t('devise.sessions.login')
    = devise_error_messages!
    .form-group
      = f.label :email
      = f.email_field :email, :autofocus => true, class: 'form-control' 
    .form-group
      - if devise_mapping.recoverable? 
        = link_to "Forgot password?", new_password_path(resource_name), class: 'right' 
      = f.label :password
      = f.password_field :password, class: 'form-control' 

    = f.submit t('devise.sessions.login'), :class => 'button right'
    - if devise_mapping.rememberable?
      .checkbox-inline
        = f.check_box :remember_me
        = f.label :remember_me

.authform
  %form
    %h3=t('devise.registrations.not_registered')
    = devise_error_messages!
    .form-group
      - if devise_mapping.registerable?
        = link_to t('devise.registrations.register'), new_registration_path(resource_name), class: 'btn btn-primary right'
