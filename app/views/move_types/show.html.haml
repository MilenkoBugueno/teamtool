- model_class = MoveType
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @move_type.title
%p
  %strong= model_class.human_attribute_name(:icon_path) + ':'
  %br
  = @move_type.icon_path
%p
  %strong= model_class.human_attribute_name(:sprint) + ':'
  %br
  = @move_type.sprint
%p
  %strong= model_class.human_attribute_name(:day_plan) + ':'
  %br
  = @move_type.day_plan
%p
  %strong= model_class.human_attribute_name(:user_story) + ':'
  %br
  = @move_type.user_story


= link_to t('.back', :default => t("helpers.links.back")), move_types_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_move_type_path(@move_type), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), move_type_path(@move_type), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
